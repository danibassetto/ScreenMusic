@model ScreenMusic.Arguments.InputCreateArtist
@{
    ViewBag.Title = "Criar Artista";
}

<h2>Criar Artista</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Biography" class="control-label"></label>
        <textarea asp-for="Biography" class="form-control"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfilePhoto" class="control-label"></label>
        <input asp-for="ProfilePhoto" class="form-control" />
        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>