@using ScreenMusic.Arguments
@model InputCreateMusicGenre
@{
    ViewData["Title"] = "Cadastro do Gênero Musical";
}

<div class="container mt-5">
    <h4 class="mb-4 text-center">Cadastro do Gênero Musical</h4>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Nome</label>
            <input asp-for="Name" class="form-control" placeholder="Nome do gênero musical" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Descrição</label>
            <textarea asp-for="Description" class="form-control" placeholder="Descrição do gênero musical" rows="4" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>        

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a class="btn btn-info" asp-action="Index" asp-controller="MusicGenre">Voltar</a>
            <button type="submit" class="btn btn-primary ml-auto">Cadastrar</button>
        </div>
    </form>
</div>