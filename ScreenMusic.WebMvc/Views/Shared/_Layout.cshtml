@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScreenMusic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" href="images/favicon.png" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScreenMusic.WebMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body style="background-color: #3e3e3e;">
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-lg-2 px-sm-2 px-0 sidebar">
                <h4 class="nav-link">ScreenMusic</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="bi bi-house-fill"></i><span class="ms-1 text-white">Home</span>
                        </a>
                    </li>                    
                    @if (HttpContextAccessor.HttpContext!.User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Artist" asp-action="Index" class="nav-link">
                                <i class="bi bi-mic-fill"></i><span class="ms-1 text-white">Artista</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Music" asp-action="Index" class="nav-link">
                                <i class="bi bi-music-note-beamed"></i><span class="ms-1 text-white">Música</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="MusicGenre" asp-action="Index" class="nav-link">
                                <i class="bi bi-vinyl-fill"></i><span class="ms-1 text-white">Gênero Musical</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Authentication" asp-action="Login" class="nav-link">
                            @if (HttpContextAccessor.HttpContext!.User.Identity!.IsAuthenticated)
                            {
                                <i class="bi bi-door-open-fill"></i>

                                <span class="ms-1 text-white">Logout</span>
                            }
                            else
                            {
                                <i class="bi bi-door-closed-fill"></i>

                                <span class="ms-1 text-white">Login</span>
                            }
                        </a>
                    </li>
                </ul>
            </div>

            <main role="main" class="col px-0 flex-grow-1 content">
                <div class="container pt-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="footer text-muted mt-3">
        <div class="container text-white">
            &copy; 2024 - ScreenMusic
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>