@model ScreenMusic.Arguments.OutputMusic

<div class="card h-100">
    <img class="card-img-top" src="images/cardArtista.png" alt="@Model.Name">
    <div class="card-header">
        <h6 class="card-title">@Model.Name</h6>
    </div>
    <div class="card-body">
        @* <p class="card-text">Artista/Banda: @Model.ArtistName</p> *@
        <p class="card-text">Ano de Lançamento: @Model.ReleaseYear</p>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-warning" asp-action="Update" asp-controller="Music" asp-route-id="@Model.Id">
            <i class="bi bi-pencil-square"></i> Detalhes
        </a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal-@Model.Id">
            <i class="bi bi-trash"></i> Excluir
        </button>
    </div>

    <div class="modal fade" id="confirmDeleteModal-@Model.Id" tabindex="-1" aria-labelledby="confirmDeleteModalLabel-@Model.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel-@Model.Id">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja excluir a música <strong>@Model.Name</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="Delete" asp-controller="Music" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>