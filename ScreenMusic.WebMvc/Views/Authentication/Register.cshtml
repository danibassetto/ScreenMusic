@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Registre-se";
}

<div class="container mt-5">
    <div class="container mt-2 text-black">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="card shadow">
                    <div class="card-header text-white" style="background-color: #9820b0;">
                        <h4>Registrar</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post" class="border rounded bg-light p-4">
                            <div class="form-group mb-3">
                                <label for="Email">Email</label>
                                <input type="email" name="Email" class="form-control" required placeholder="Digite seu email" />
                            </div>
                            <div class="form-outline mb-4">
                                <label for="Password">Senha</label>
                                <div class="input-group">
                                    <input type="password" name="Password" class="form-control" required id="password" placeholder="Digite sua senha" />
                                    <button class="btn btn-outline-secondary" type="button" id="showHidePassword">
                                        <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="ConfirmPassword">Confirme sua senha</label>
                                <input type="password" name="ConfirmPassword" class="form-control" required placeholder="Confirme sua senha" />
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn text-white btn-block w-100" style="background-color: #9820b0;">Registrar</button>
                            </div>
                            <div class="form-group text-center mt-3 mb-0">
                                <a asp-action="Login" class="btn btn-link">Já tem uma conta? Efetue login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>