@using ScreenMusic.Arguments
﻿<MudCard>
    <MudCardMedia Image="@Image"></MudCardMedia>
    <MudCardHeader>
    <CardHeaderContent>
        <MudText Typo="Typo.h6">@Artist!.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Artist!.Biography</MudText>
        <MudRating SelectedValue="@Convert.ToInt32(Artist!.Classification)" />
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning" Variant="Variant.Outlined" Href=@($"/UpdateArtist/{Artist!.Name}")>Detalhes</MudButton>
    </MudCardActions>
</MudCard>

    @code {
    [Parameter]
    public OutputArtist? Artist { get; set; }

    public string? Image { get; set; }

    protected override void OnInitialized()
    {
        Image = Artist!.ProfilePhoto!.Contains("Photo") ? $"https://localhost:7089/{Artist!.ProfilePhoto}" : "images/cardArtista.png";
    }
}