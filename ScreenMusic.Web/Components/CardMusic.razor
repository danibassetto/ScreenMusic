@using ScreenMusic.Arguments
﻿<MudCard>
    <MudCardMedia Image="images/cardArtista.png"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Music!.Name</MudText>
            </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">Artista/Banda:@Music!.Name</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
                    Variant="Variant.Outlined"
                    Href=@($"/UpdateMusic/{Music!.Name}")>Detalhes</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public OutputMusic? Music { get; set; }
}